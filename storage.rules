rules_version = '2';

// Craft rules based on data in your Firestore database
service firebase.storage {
  match /b/{bucket}/o {
    // Media uploads in structured folders
    match /media/{folder}/{fileName} {
      // Allow authenticated users to read and write
      allow read, write: if request.auth != null;
      
      // File size restrictions (50MB max)
      allow write: if request.resource.size < 50 * 1024 * 1024;
      
      // File type restrictions
      allow write: if request.resource.contentType.matches('image/.*') ||
                      request.resource.contentType.matches('video/.*') ||
                      request.resource.contentType.matches('audio/.*') ||
                      request.resource.contentType.matches('application/pdf') ||
                      request.resource.contentType.matches('text/.*') ||
                      request.resource.contentType.matches('application/.*');
    }
    
    // User avatars
    match /avatars/{userId} {
      allow read: if true; // Public read
      allow write: if request.auth != null && request.auth.uid == userId;
      allow write: if request.resource.size < 5 * 1024 * 1024; // 5MB max for avatars
    }
    
    // Temporary uploads
    match /temp/{fileName} {
      allow read, write: if request.auth != null;
      allow write: if request.resource.size < 100 * 1024 * 1024; // 100MB max for temp files
    }
  }
}
